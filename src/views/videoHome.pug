doctype html
html(lang="ko")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Noom
    link(rel="stylesheet", href="https://unpkg.com/mvp.css")
  body 
    header 
      h1 Noom
    
    main
      div#welcome
        form
          input(placeholder="room name", required, type="text")
          button Enter room
      div#call
        div#myStream
          video#myFace(autoplay, playsinline, width="400", height="300", style="margin-right: 24px")
          video#peerFace(autoplay, playsinline, width="400", height="300")
          select#cameras
          button#mute(style="margin-right: 24px") Mute
          button#camera(style="margin-right: 24px") Turn Camera Off
          button#leave leave
        div#chat(style="border: solid 1px gray; height: 530px")
          form#msg
            input(placeholder="message", required, type="text")
            button Send
          ul(style="max-height: 320px; overflow: auto;")
        
    script(src="/socket.io/socket.io.js")
    script(src="/public/js/videoApp.js")